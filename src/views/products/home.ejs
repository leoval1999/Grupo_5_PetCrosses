    <%- include('../partials/header') %>

    <main class="principal">
        <div id="conteItemsCarrusel">
            <div class="itemCarrusel" id="itemCarrusel-1">
                <div class="tarjetaCarrusel" id="tarjetaCarrusel-1"><img src="/img/fondo.jpg" alt="item-1-carrusel">
